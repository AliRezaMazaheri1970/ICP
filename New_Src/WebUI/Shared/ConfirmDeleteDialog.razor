@using MudBlazor
@using Microsoft.AspNetCore.Components

@code {
    [CascadingParameter]
    private IMudDialogInstance? MudDialog { get; set; }
    [Parameter] public string ProjectName { get; set; } = "";
    private void Submit() => MudDialog?.Close(DialogResult.Ok(true));
    private void Cancel() => MudDialog?.Cancel();
}

<MudPaper Class="pa-4">
    <MudText Typo="Typo.h6">Are you sure you want to delete this project?</MudText>
    <MudText Typo="Typo.body2" Class="mt-2">@ProjectName</MudText>

    <div class="d-flex justify-end mt-4">
        <MudButton Variant="Variant.Text" Color="Color.Default" OnClick="Cancel">Cancel</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Error" OnClick="Submit" Class="ms-2">Delete</MudButton>
    </div>
</MudPaper>
