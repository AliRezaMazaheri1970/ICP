@page "/crm"
@using WebUI.Services
@inject CrmService CrmService
@inject AuthService AuthService
@inject ISnackbar Snackbar
@inject IDialogService DialogService

<PageTitle>ICP - CRM Database</PageTitle>
@{
    var user = AuthService.GetCurrentUser();
    var isAuthenticated = user?.IsAuthenticated ?? false;
    
}
<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
    <MudPaper Elevation="0" Class="pa-4 mb-4 custom-card-all">
        <div class="d-flex justify-space-between align-center">
            <div>
                <MudText Typo="Typo.h4" Class="fw-bold">CRM Database</MudText>
                <MudText Typo="Typo.body2" Class="mud-text-secondary">
                    Manage Certified Reference Materials and their element values
                </MudText>
            </div>
            <MudButton Variant="Variant.Filled"
                       Class="color-bg-dark-blue"
                       StartIcon="@Icons.Material.Filled.Add"
                       OnClick="OpenAddDialog">
                Add CRM
            </MudButton>
        </div>
    </MudPaper>

    @* Search & Filter *@
    <MudPaper Elevation="0" Class="pa-4 mb-4 custom-card-all">
        <MudGrid>
            <MudItem xs="12" md="4">
                <MudTextField @bind-Value="_searchText"
                              Label="Search CRM"
                              Variant="Variant.Outlined"
                              Adornment="Adornment.Start"
                              AdornmentIcon="@Icons.Material.Filled.Search"
                              Immediate="true"
                              OnKeyUp="OnSearchChanged" />
            </MudItem>

            <MudItem xs="12" md="4" Class="position-relative">
                @* <MudSelect T="string"
                           Label="Analysis Method"
                           Variant="Variant.Outlined"
                           Value="_selectedMethod"
                           ValueChanged="OnMethodChanged"
                           Clearable="true">
                    @foreach (var method in _analysisMethods)
                    {
                        <MudSelectItem Value="@method">@method</MudSelectItem>
                    }
                </MudSelect> *@
                <MudTextField T="string"
                              Label="Analysis Method"
                              Variant="Variant.Outlined"
                              Value="@_methodDisplayValue"
                              ReadOnly="true"
                              Adornment="Adornment.End"
                              AdornmentIcon="@Icons.Material.Filled.ArrowDropDown"
                              OnAdornmentClick="OpenMethodFilter"
                              OnClick="OpenMethodFilter"
                              Class="cursor-pointer" />

                <MudPopover Open="@_isMethodPopoverOpen"
                            AnchorOrigin="Origin.BottomCenter"
                            TransformOrigin="Origin.TopCenter"
                            RelativeWidth="DropdownWidth.Relative"
                            MaxHeight="400"
                            Class="method-popover">

                    <MudPaper Elevation="0" Class="pa-2 d-flex flex-column gap-2" Style="width: 100%;">

                        <MudTextField @bind-Value="_methodSearchText"
                                      Placeholder="Search..."
                                      Adornment="Adornment.Start"
                                      AdornmentIcon="@Icons.Material.Filled.Search"
                                      Variant="Variant.Outlined"
                                      Margin="Margin.Dense"
                                      Immediate="true" />

                        <div style="max-height: 200px; overflow-y: auto; border: 1px solid #eee; border-radius: 4px; padding: 5px;">
                            @foreach (var method in _analysisMethods.Where(m => string.IsNullOrEmpty(_methodSearchText) || m.Contains(_methodSearchText, StringComparison.OrdinalIgnoreCase)))
                            {
                                <MudCheckBox T="bool?"
                                             Value="@(_tempSelectedMethods.Contains(method))"
                                             ValueChanged="@((val) => ToggleMethodSelection(method, val))"
                                             Label="@method"
                                             Dense="true"
                                             Color="Color.Primary" />
                            }
                            @if (!_analysisMethods.Any())
                            {
                                <MudText Typo="Typo.caption" Class="pa-2">No methods available</MudText>
                            }
                        </div>

                        <MudGrid Spacing="1" Class="mt-1">
                            <MudItem xs="6">
                                <MudButton Variant="Variant.Filled"
                                           Color="Color.Success"
                                           Size="Size.Small"
                                           FullWidth="true"
                                           OnClick="SelectAllMethods"
                                           Class="py-1"
                                           Style="font-size: 0.7rem;">Select All</MudButton>
                            </MudItem>
                            <MudItem xs="6">
                                <MudButton Variant="Variant.Filled"
                                           Color="Color.Success"
                                           Size="Size.Small"
                                           FullWidth="true"
                                           OnClick="DeselectAllMethods"
                                           Class="py-1"
                                           Style="font-size: 0.7rem;">Deselect All</MudButton>
                            </MudItem>
                            <MudItem xs="6">
                                <MudButton Variant="Variant.Filled"
                                           Color="Color.Success"
                                           Size="Size.Small"
                                           FullWidth="true"
                                           OnClick="ApplyMethodFilter"
                                           Class="py-1"
                                           Style="font-size: 0.7rem;">OK</MudButton>
                            </MudItem>
                            <MudItem xs="6">
                                <MudButton Variant="Variant.Filled"
                                           Color="Color.Success"
                                           Size="Size.Small"
                                           FullWidth="true"
                                           OnClick="CancelMethodFilter"
                                           Class="py-1"
                                           Style="font-size: 0.7rem;">Cancel</MudButton>
                            </MudItem>
                        </MudGrid>

                    </MudPaper>
                </MudPopover>

                @if (_isMethodPopoverOpen)
                {
                    <div style="position:fixed; top:0; left:0; right:0; bottom:0; z-index: 100;" @onclick="CancelMethodFilter"></div>
                }

            </MudItem>
            <MudItem xs="12" md="4">
                <MudButton Variant="Variant.Outlined"
                           FullWidth="true"
                           StartIcon="@Icons.Material.Filled.Refresh"
                           OnClick="LoadCrmData"
                           Class="mt-1 refresh-crm"
                           Style="height: 56px;">
                    Refresh
                </MudButton>
            </MudItem>
        </MudGrid>
    </MudPaper>

    @* CRM Table *@
    <MudPaper Elevation="0" Class="pa-4 custom-card-all">
        @if (_isLoading)
        {
            <div class="d-flex justify-center align-center" style="min-height: 300px;">
                <MudProgressCircular Indeterminate="true" Size="Size.Large" />
            </div>
        }
        else if (_crmList.Count == 0)
        {
            <MudAlert Severity="Severity.Info">
                No CRM records found. Click "Add CRM" to create a new record.
            </MudAlert>
        }
        else
        {
            // ✅ تغییر: اتصال به _pagedRows به جای لیست اصلی
            <MudTable Items="@_pagedRows"
                      Hover="true"
                      Dense="true"
                      FixedHeader="true"
                      Height="410px"
                      Breakpoint="Breakpoint.None"
                      HorizontalScrollbar="true"
                      SortLabel="Sort By">
                <HeaderContent>
                    <MudTh><MudTableSortLabel SortBy="@((CrmListItemDto x) => x.CrmId)">CRM ID</MudTableSortLabel></MudTh>
                    <MudTh><MudTableSortLabel SortBy="@((CrmListItemDto x) => x.AnalysisMethod)">Method</MudTableSortLabel></MudTh>
                    <MudTh>Type</MudTh>
                    <MudTh>Elements</MudTh>
                    <MudTh Style="width: 150px;">Actions</MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd><MudText Class="fw-medium">@context.CrmId</MudText></MudTd>
                    <MudTd>@context.AnalysisMethod</MudTd>
                    <MudTd>
                        @if (context.IsOurOreas)
                        {
                            <MudChip T="string" Size="Size.Small" Color="Color.Success">Our Oreas</MudChip>
                        }
                        else
                        {
                            <MudChip T="string" Size="Size.Small">@context.Type</MudChip>
                        }
                    </MudTd>
                    <MudTd>
                        <div class="d-flex flex-wrap gap-1">
                            @foreach (var el in context.ElementValues.Take(5))
                            {
                                <MudChip T="string" Size="Size.Small" Class="color-bg-dark-blue">@el.Key: @el.Value.ToString("F4")</MudChip>
                            }
                            @if (context.ElementValues.Count > 5)
                            {
                                <MudChip T="string" Size="Size.Small" Color="Color.Default">+@(context.ElementValues.Count - 5) more</MudChip>
                            }
                        </div>
                    </MudTd>
                    <MudTd>
                        <MudIconButton Icon="@Icons.Material.Filled.Visibility"
                                       Size="Size.Small"
                                       Class="color-light-blue"
                                       OnClick="@(() => ViewCrm(context))"
                                       aria-label="View Details" />
                        @if(user?.Position?.Equals("Admin", StringComparison.OrdinalIgnoreCase) ?? false)
                        {
                            <MudIconButton Icon="@Icons.Material.Filled.Edit"
                                           Size="Size.Small"
                                           Class="color-dark-blue"
                                           OnClick="@(() => EditCrm(context))"
                                           aria-label="Edit" />
                            <MudIconButton Icon="@Icons.Material.Filled.Delete"
                                           Size="Size.Small"
                                           Color="Color.Error"
                                           OnClick="@(() => DeleteCrm(context))"
                                           aria-label="Delete" />
                        }
                        else if (user?.Position?.Equals("Analyst",StringComparison.OrdinalIgnoreCase)?? false)
                        {
                            <MudIconButton Icon="@Icons.Material.Filled.Edit"
                                           Size="Size.Small"
                                           Class="color-dark-blue"
                                           OnClick="@(() => EditCrm(context))"
                                           aria-label="Edit" />
                        }

                    </MudTd>
                </RowTemplate>
                @* ❌ حذف PagerContent قدیمی *@
            </MudTable>

            @* ✅ اضافه کردن کنترل‌های پیجینیشن دستی (مشابه WeightCheck) *@
            <div class="d-flex justify-center align-center mt-4 gap-4 change-flex-item">
                <MudSelect T="int" Value="_pageSize" ValueChanged="OnPageSizeChanged"
                           Label="Per Page" Variant="Variant.Outlined"
                           Dense="true" Style="width: 100px;">
                    <MudSelectItem Value="10">10</MudSelectItem>
                    <MudSelectItem Value="25">25</MudSelectItem>
                    <MudSelectItem Value="50">50</MudSelectItem>
                    <MudSelectItem Value="100">100</MudSelectItem>
                </MudSelect>

                <MudPagination Count="@_totalPages"
                               Selected="_currentPage"
                               SelectedChanged="OnPageChanged"
                               ShowFirstButton="true"
                               ShowLastButton="true"
                               BoundaryCount="1"
                               MiddleCount="3" />
                <MudText Typo="Typo.caption" Class="d-flex justify-center mt-2">
                    Showing @((_currentPage - 1) * _pageSize + 1) - @Math.Min(_currentPage * _pageSize, _totalCount) of @_totalCount
                </MudText>
            </div>

        }
    </MudPaper>
</MudContainer>



@* Add/Edit CRM Dialog *@
<MudDialog @bind-Visible="_showDialog">
    <TitleContent>
        <MudText Typo="Typo.h6">
            @(_isEditMode ? "Edit CRM" : "Add New CRM")
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12" md="6">
                <MudTextField @bind-Value="_editingCrm.CrmId"
                              Label="CRM ID"
                              Variant="Variant.Outlined"
                              Required="true"
                              Disabled="_isEditMode" />
            </MudItem>
            <MudItem xs="12" md="6">
                <MudTextField @bind-Value="_editingCrm.AnalysisMethod"
                              Label="Analysis Method"
                              Variant="Variant.Outlined" />
            </MudItem>
            <MudItem xs="12" md="6">
                <MudTextField @bind-Value="_editingCrm.Type"
                              Label="Type"
                              Variant="Variant.Outlined" />
            </MudItem>
            <MudItem xs="12" md="6">
                <MudCheckBox @bind-Value="_editingCrm.IsOurOreas"
                             Label="Our Oreas"
                             Color="Color.Primary" />
            </MudItem>
            <MudItem xs="12">
                <MudText Typo="Typo.subtitle2" Class="mb-2">Element Values</MudText>
                @foreach (var el in _editingElements)
                {
                    <MudGrid Class="mb-2">
                        <MudItem xs="5">
                            <MudTextField @bind-Value="el.Name"
                                          Label="Element"
                                          Variant="Variant.Outlined"
                                          Margin="Margin.Dense" />
                        </MudItem>
                        <MudItem xs="5">
                            <MudNumericField @bind-Value="el.Value"
                                             Label="Value"
                                             Variant="Variant.Outlined"
                                             Margin="Margin.Dense"
                                             Step="0.0001M" />
                        </MudItem>
                        <MudItem xs="2" Class="d-flex align-center">
                            <MudIconButton Icon="@Icons.Material.Filled.Delete"
                                           Color="Color.Error"
                                           Size="Size.Small"
                                           OnClick="@(() => RemoveElement(el))" />
                        </MudItem>
                    </MudGrid>
                }
                <MudButton Variant="Variant.Text"
                           Class="color-dark-blue"
                           StartIcon="@Icons.Material.Filled.Add"
                           OnClick="AddElement"
                           Size="Size.Small">
                    Add Element
                </MudButton>
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="CloseDialog">Cancel</MudButton>
        <MudButton Class="color-bg-dark-blue"
                   Variant="Variant.Filled"
                   OnClick="SaveCrm"
                   Disabled="_isSaving">
            @if (_isSaving)
            {
                <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="me-2" />
            }
            Save
        </MudButton>
    </DialogActions>
</MudDialog>

@* View CRM Dialog *@
<MudDialog @bind-Visible="_showViewDialog">
    <TitleContent>
        <MudText Typo="Typo.h6">CRM Details: @_viewingCrm?.CrmId</MudText>
    </TitleContent>
    <DialogContent>
        @if (_viewingCrm != null)
        {
            <MudGrid>
                <MudItem xs="6">
                    <MudText Typo="Typo.caption">CRM ID</MudText>
                    <MudText Typo="Typo.body1" Class="fw-medium">@_viewingCrm.CrmId</MudText>
                </MudItem>
                <MudItem xs="6">
                    <MudText Typo="Typo.caption">Analysis Method</MudText>
                    <MudText Typo="Typo.body1">@(_viewingCrm.AnalysisMethod ?? "-")</MudText>
                </MudItem>
                <MudItem xs="6">
                    <MudText Typo="Typo.caption">Type</MudText>
                    <MudText Typo="Typo.body1">@(_viewingCrm.Type ?? "-")</MudText>
                </MudItem>
                <MudItem xs="6">
                    <MudText Typo="Typo.caption">Our Oreas</MudText>
                    <MudText Typo="Typo.body1">@(_viewingCrm.IsOurOreas ? "Yes" : "No")</MudText>
                </MudItem>
                <MudItem xs="12">
                    <MudDivider Class="my-2" />
                    <MudText Typo="Typo.subtitle2" Class="mb-2">Element Values</MudText>
                    <MudSimpleTable Dense="true" Elevation="0">
                        <thead>
                            <tr>
                                <th>Element</th>
                                <th>Value</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var el in _viewingCrm.ElementValues)
                            {
                                <tr>
                                    <td>@el.Key</td>
                                    <td>@el.Value.ToString("F4")</td>
                                </tr>
                            }
                        </tbody>
                    </MudSimpleTable>
                </MudItem>
            </MudGrid>
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@(() => _showViewDialog = false)">Close</MudButton>
    </DialogActions>
</MudDialog>
