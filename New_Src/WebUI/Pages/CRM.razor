        width: 100%;
        display: table;
        border-spacing: 0;
        border-collapse: collapse;
        /* height: 200px; */
        overflow: scroll;
    }

    .mud-table-dense * .mud-table-row .mud-table-cell {
        padding: 2px 15px 2px 16px;
