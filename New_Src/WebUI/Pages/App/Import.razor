@page "/import"
@using MudBlazor
@using WebUI.Services
@using Microsoft.AspNetCore.Components.Forms
@using Application.Services
@inject AuthService AuthService
@inject IImportService ImportService
@inject ProjectService ProjectService
@inject MudBlazor.IDialogService DialogService
@inject NavigationManager NavManager
@inject ISnackbar Snackbar

<PageTitle>Import Data - ICP</PageTitle>

<NavigationLock OnBeforeInternalNavigation="OnBeforeNavigation" ConfirmExternalNavigation="isLoading" />

@if (isLoading)
{
    <div class="loading-overlay">
        <MudPaper Elevation="4" Class="pa-6 d-flex flex-column align-center">
            <MudProgressCircular Color="Color.Primary" Size="Size.Large" Indeterminate="true" />
            <MudText Typo="Typo.h6" Class="mt-4">Processing...</MudText>
        </MudPaper>
    </div>
}

<MudContainer MaxWidth="MaxWidth.False" Class="mt-6 px-6">

    @if (!isWindowOpen)
    {
              @if (!isViewer)
            {

            <div class="mx-auto" style="max-width: 1000px;">
                <div class="d-flex justify-space-between align-center mb-6">
                    <div>
                        <MudText Typo="Typo.h3" Class="fw-bold">Import Data</MudText>
                        <MudText Typo="Typo.subtitle1" Class="mud-text-secondary mt-1">Upload CSV or Excel files to start</MudText>
                    </div>
                    <MudButton StartIcon="@Icons.Material.Filled.ArrowBack" OnClick="GoToDashboard" Variant="Variant.Text" Color="Color.Default" Style="font-weight: bold; letter-spacing: 1px;">BACK</MudButton>
                </div>

                <MudPaper Elevation="0" Class="pa-8 custom-card-all">
                    <div class="drop-zone-dashed d-flex flex-column align-center justify-center relative-container">
                        <MudIcon Icon="@Icons.Material.Filled.CloudUpload" Color="Color.Primary" Style="font-size: 5rem; opacity: 0.8;" Class="mb-4" />
                        <MudText Typo="Typo.h5" Class="mb-2 fw-bold" Style="color: #455a64;">Drop file here or click to browse</MudText>
                        <MudText Typo="Typo.body2" Class="mud-text-secondary">Supported formats: CSV, Excel, TXT</MudText>
                        @if (!isViewer)
                        {
                            <InputFile OnChange="OnInputFileChangeStandard" accept=".csv, .xlsx, .xls, .txt" class="absolute-file-input" />
                        }
                    </div>
                </MudPaper>
            </div>
            }
            else
            {
            <div class="mx-auto" style="max-width: 1000px;">
                <div class="d-flex justify-space-between align-center mb-6">
                    <div>
                        <MudText Typo="Typo.h3" Class="fw-bold">Import Data</MudText>
                        <MudText Typo="Typo.subtitle1" Class="mud-text-secondary mt-1">Upload CSV or Excel files to start</MudText>
                    </div>
                    <MudButton StartIcon="@Icons.Material.Filled.ArrowBack" OnClick="GoToDashboard" Variant="Variant.Text" Color="Color.Default" Style="font-weight: bold; letter-spacing: 1px;">BACK</MudButton>
                </div>

                <MudPaper Elevation="0" Class="pa-8 white-card" Style="border-radius: 12px;">
                    <div class="drop-zone-dashed d-flex flex-column align-center justify-center relative-container">
                        <MudIcon Icon="@Icons.Material.Filled.Warning" Color="Color.Warning" Style="font-size: 5rem; opacity: 0.8;" Class="mb-4" />
                        <MudText Typo="Typo.h5" Class="mb-2 fw-bold" Style="color: #455a64;">Viewer is not upload projects</MudText>
                        
                    </div>
                </MudPaper>
            </div>
            }
    }
    else
    {
        <MudPaper Elevation="3" Class="custom-card-all" Style="width: 100%; overflow: hidden;">

            <div class="d-flex justify-space-between align-center px-4 py-2 border-bottom" style="background-color: #e0e0e0;">
                <MudText Typo="Typo.h6" Style="font-size: 1rem; font-weight: bold;">File Management (Upload & CRUD)</MudText>
                <MudIconButton Icon="@Icons.Material.Filled.Close" OnClick="ClearFile" Size="Size.Small" Color="Color.Error" />
            </div>

            <MudTabs Elevation="0" Rounded="false" ApplyEffectsToContainer="true" PanelClass="pa-4" Color="Color.Transparent" SliderColor="Color.Primary">

                <MudTabPanel Text="Upload New File">

                    <MudGrid Class="align-center mb-3">
                        <MudItem xs="12" md="2">
                            <MudText Typo="Typo.subtitle2" Class="fw-bold">Project Name:</MudText>
                        </MudItem>
                        <MudItem xs="12" md="10">
                            <div class="d-flex gap-2" style="width: 100%;">
                                <MudTextField @bind-Value="displayFileName" Variant="Variant.Outlined" Margin="Margin.Dense" ReadOnly="false" FullWidth="true" Class="white-bg" Placeholder="Project Name" />
                                <div class="relative-container" style="width: auto; min-width: 130px;">
                                    <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.FolderOpen" Class="select-file-btn" FullWidth="true">Select File</MudButton>
                                    <InputFile OnChange="ReselectFile" accept=".csv, .xlsx, .xls, .txt" class="absolute-file-input" />
                                </div>
                            </div>
                        </MudItem>
                    </MudGrid>

                    <MudGrid Class="mb-2" Spacing="1">
                        <MudItem xs="12" md="2"><MudText Typo="Typo.subtitle2">Extracted Contracts:</MudText></MudItem>
                        <MudItem xs="12" md="10">
                            <div class="console-box large-box">
                                @if (analysisData?.Contracts != null)
                                {
                                    foreach (var item in analysisData.Contracts)
                                    {
                                        <div class="console-text">@item</div>
                                    }
                                }
                            </div>
                        </MudItem>
                    </MudGrid>

                    <MudGrid Class="mb-2" Spacing="1">
                        <MudItem xs="12" md="2"><MudText Typo="Typo.subtitle2">Extracted CRMs:</MudText></MudItem>
                        <MudItem xs="12" md="10">
                            <div class="console-box medium-box">
                                @if (analysisData?.CRMs != null)
                                {
                                    foreach (var item in analysisData.CRMs)
                                    {
                                        <div class="console-text">@item</div>
                                    }
                                }
                            </div>
                        </MudItem>
                    </MudGrid>

                    <MudGrid Class="mb-4" Spacing="1">
                        <MudItem xs="12" md="2"><MudText Typo="Typo.subtitle2">Extracted Blanks:</MudText></MudItem>
                        <MudItem xs="12" md="10">
                            <div class="console-box medium-box">
                                @if (analysisData?.Blanks != null)
                                {
                                    foreach (var item in analysisData.Blanks)
                                    {
                                        <div class="console-text">@item</div>
                                    }
                                }
                            </div>
                        </MudItem>
                    </MudGrid>

                    <MudDivider Class="mb-4" />

                    <MudGrid Spacing="2">
                        <MudItem xs="12" md="2" Class="d-flex align-center"><MudText Typo="Typo.subtitle2">Device:</MudText></MudItem>
                        <MudItem xs="12" md="10">
                            <MudSelect @bind-Value="selectedDevice" T="string" Variant="Variant.Outlined" Margin="Margin.Dense" Dense="true" Class="white-bg">
                                @foreach (var device in deviceOptions)
                                {
                                    <MudSelectItem Value="@device">@device</MudSelectItem>
                                }
                            </MudSelect>
                        </MudItem>

                        <MudItem xs="12" md="2" Class="d-flex align-center"><MudText Typo="Typo.subtitle2">File Type:</MudText></MudItem>
                        <MudItem xs="12" md="10">
                            <MudSelect @bind-Value="selectedFileType" T="string" Variant="Variant.Outlined" Margin="Margin.Dense" Dense="true" Class="white-bg">
                                @foreach (var type in fileTypeOptions)
                                {
                                    <MudSelectItem Value="@type">@type</MudSelectItem>
                                }
                            </MudSelect>
                        </MudItem>

                        <MudItem xs="12" md="2" Class="d-flex align-center"><MudText Typo="Typo.subtitle2">Description:</MudText></MudItem>
                        <MudItem xs="12" md="10">
                            <MudTextField @bind-Value="description" Variant="Variant.Outlined" Margin="Margin.Dense" Placeholder="Optional notes..." Class="white-bg" />
                        </MudItem>
                    </MudGrid>

                    <div class="d-flex justify-center mt-6 mb-2">
                        <MudButton Variant="Variant.Filled" OnClick="ImportFile" Disabled="@(!CanImport || uploadCompleted)" Class="upload-btn" Style="width: 100%; height: 40px; background-color: #e0e0e0; color: black; border: 1px solid #ccc; font-weight: bold;">
                            @if (isLoading)
                            {
                                <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="me-2" />
                                <span>Processing...</span>
     }
    else
    {
                                <span>Upload</span>
                            }
                        </MudButton>
                    </div>

                </MudTabPanel>

                <MudTabPanel Text="Manage Existing Files">

                    <div style="height: 600px; overflow-y: auto;">

                        <MudGrid Class="mb-4 pa-2 border rounded" Style="background-color: #f9f9f9; position: relative; z-index: 3;">
                            <MudItem xs="12" md="4">
                                <MudTextField @bind-Value="filterContract" Label="Contract" Variant="Variant.Outlined" Margin="Margin.Dense" Class="white-bg" />
                            </MudItem>
                            <MudItem xs="12" md="4">
                                <MudDateRangePicker Label="Upload Date Range" Variant="Variant.Outlined" Margin="Margin.Dense" Class="white-bg" />
                            </MudItem>
                            <MudItem xs="12" md="4" Class="d-flex align-center">
                                <MudButton Variant="Variant.Filled" Color="Color.Primary" FullWidth="true">Search</MudButton>
                            </MudItem>
                        </MudGrid>

                        <div class="table-scroll">
                            <MudTable Items="@existingFiles" @bind-SelectedItem="selectedItem" Hover="true" Dense="true" Striped="true" Bordered="true" Elevation="0" RowClick="OnRowClicked" RowClass="RowClassFunc" FixedHeader="true" Height="420px">
                            <HeaderContent>
                                <MudTh>Row</MudTh>
                                <MudTh>File Name</MudTh>
                                <MudTh>Uploaded By</MudTh>
                                <MudTh>Device</MudTh>
                                <MudTh>Upload Date</MudTh>
                                <MudTh>Status</MudTh>
                                <MudTh>Content Preview</MudTh>
                            </HeaderContent>
                            <RowTemplate>
                                <MudTd DataLabel="Row">@(existingFiles.IndexOf(context) + 1)</MudTd>
                                <MudTd DataLabel="File Name">@context.ProjectName</MudTd>
                                <MudTd DataLabel="Uploaded By">@context.CreatedBy</MudTd>
                                <MudTd DataLabel="Device">@context.Device</MudTd>
                                <MudTd DataLabel="Upload Date">@context.Created</MudTd>
                                <MudTd DataLabel="Status">@(context.Status ? "Active" : "Inactive")</MudTd>
                                <MudTd DataLabel="Content Preview" Style="font-size: 0.8rem; color: #666;">
                                    1713 with varieties...
                                </MudTd>
                            </RowTemplate>
                            </MudTable>
                        </div>

                        <div class="table-footer d-flex justify-end mt-2 gap-2">
                            <MudButton Variant="Variant.Outlined" Size="Size.Small" Disabled="@(selectedItem == null)" OnClick="@OpenEditDialog">Edit</MudButton>
                            <MudButton Variant="Variant.Outlined" Size="Size.Small" Color="Color.Error" Disabled="@(selectedItem == null)" OnClick="@ConfirmDelete">Delete</MudButton>
                            <MudButton Variant="Variant.Outlined" Size="Size.Small" OnClick="@RefreshList">Refresh</MudButton>
                        </div>
                    </div>

                </MudTabPanel>

            </MudTabs>

            <div class="d-flex justify-end px-4 py-2 border-top">
                <MudButton Variant="Variant.Outlined" OnClick="ClearFile" Size="Size.Small" Color="Color.Error">Close</MudButton>
            </div>

        </MudPaper>
    }

</MudContainer>

<style>
  
    .drop-zone-dashed {
        width: 100%;
        height: 350px;
        border: 2px dashed #cfd8dc;
        border-radius: 8px;
        transition: background-color 0.2s;
    }

    .mud-theme-dark .drop-zone-dashed {
        /* background-color: #e0e0e0; */
        border-color: #9e9e9e;
    }

        .mud-theme-dark .drop-zone-dashed h5, .mud-theme-dark .drop-zone-dashed p {
            color: #424242 !important;
        }

    .drop-zone-dashed:hover {
        /* background-color: #d1ebff; */
        border-color: #224f7b;
    }

    .absolute-file-input {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        opacity: 0;
        cursor: pointer;
        z-index: 10;
    }

    .mud-theme-dark .custom-window {
        /* background-color: #333333; */
        border-color: #555;
    }

        .mud-theme-dark .custom-window .mud-typography {
            color: #ffffff !important;
        }

    .white-bg .mud-input-control-input-container {
        /* background-color: white !important; */
    }

    .white-bg .mud-input-slot {
        color: #000000 !important;
    }

    .white-bg .mud-icon-root {
        color: #616161 !important;
    }

    .console-box {
        /* background-color: #ffffff; */
        border: 1px solid #a0a0a0;
        padding: 5px;
        overflow-y: auto;
        font-family: 'Consolas', monospace;
        box-shadow: inset 1px 1px 2px rgba(0,0,0,0.1);
    }

    .large-box {
        height: 180px;
    }

    .medium-box {
        height: 100px;
    }

    .console-text {
        color: #008000;
        font-size: 13px;
        white-space: nowrap;
        line-height: 1.3;
    }

    .loading-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.3);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 9999;
    }

    .relative-container {
        position: relative;
        width: 100%;
    }

    .mud-tabs-tabbar {
        /* background-color: #e0e0e0; */
        border-bottom: 1px solid #ccc;
    }

    .mud-tab {
        min-width: 120px;
        font-weight: bold;
    }

    .mud-tab-active {
        /* background-color: #f0f0f0; */
        border-bottom: 2px solid #1976d2;
        color: #1976d2;
    }

    /* Table scrolling with sticky header */
    .table-scroll {
        height: 420px; /* kept for outer container */
        overflow-y: hidden; /* inner table will handle scrolling when FixedHeader is used */
    }

    .table-footer {
        position: sticky;
        bottom: 0;
        padding-top: 8px;
        background: transparent;
        z-index: 6;
    }

    /* highlight selected row - stronger blue and white text for clarity */
    .selected-row,
    .mud-table-row.selected {
        background-color: #1976d2 !important;
        color: #ffffff !important;
    }

    .selected-row td,
    .mud-table-row.selected td {
        background-color: #1976d2 !important;
        color: #ffffff !important;
    }
</style>